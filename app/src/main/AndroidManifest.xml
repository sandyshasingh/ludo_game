<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmdevelopments.ludo_game">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ludo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/round_ludo_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.dmdevelopments.ludo_game.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.dmdevelopments.ludo_game.LudoActivity"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>